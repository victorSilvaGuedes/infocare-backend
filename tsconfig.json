{
	"compilerOptions": {
		/* ----- Configuração Base do Módulo ----- */
		"target": "ES2020", // Compila para uma versão moderna do JavaScript
		"module": "commonjs", // Usa o sistema de módulos do Node.js (require/exports)
		"lib": ["ES2020"], // Bibliotecas padrão do JS a incluir
		"esModuleInterop": true, // Permite compatibilidade entre 'require' e 'import'
		"forceConsistentCasingInFileNames": true, // Garante que os nomes dos ficheiros sejam consistentes

		/* ----- Caminhos de Saída e Raiz ----- */
		"rootDir": "./src", // Onde o seu código TypeScript (.ts) vive
		// "outDir": "./dist",            // (Opcional) Onde o JavaScript (.js) compilado irá

		/* ----- Verificações Rigorosas (Melhores Práticas) ----- */
		"strict": true, // Ativa todas as verificações rigorosas de tipo
		"skipLibCheck": true, // Pula a verificação de tipos dos 'node_modules' (mais rápido)

		/* ----- Para o authMiddleware funcionar ----- */
		// Diz ao TypeScript onde encontrar definições de tipo
		"typeRoots": [
			"./node_modules/@types", // Os tipos padrão
			"./src/types" // A nossa pasta customizada
		]
	},

	/* ----- O MAIS IMPORTANTE (O Conserto) ----- */
	// Diz ao TypeScript quais ficheiros devem ser incluídos na compilação
	"include": [
		"src/**/*.ts", // Inclui todos os ficheiros .ts dentro de /src
		"src/types/**/*.d.ts" // Inclui as nossas declarações globais (para o req.usuario)
	],
	"exclude": [
		"node_modules" // Ignora os 'node_modules'
	]
}
