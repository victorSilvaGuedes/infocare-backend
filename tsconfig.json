{
	"compilerOptions": {
		/* ----- Configuração Base do Módulo ----- */
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020", "DOM"], // ✅ Adiciona DOM para habilitar 'console' e outras globals
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,

		/* ----- Caminhos de Saída e Raiz ----- */
		"rootDir": "./src",
		"outDir": "./dist",

		/* ----- Verificações Rigorosas ----- */
		"strict": true,
		"skipLibCheck": true,

		/* ----- Tipos Globais ----- */
		"types": ["node"], // ✅ Adiciona suporte a process, __dirname etc.
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},

	/* ----- O MAIS IMPORTANTE (O Conserto) ----- */
	// Diz ao TypeScript quais ficheiros devem ser incluídos na compilação
	"include": [
		"src/**/*.ts", // Inclui todos os ficheiros .ts dentro de /src
		"src/types/**/*.d.ts" // Inclui as nossas declarações globais (para o req.usuario)
	],
	"exclude": [
		"node_modules" // Ignora os 'node_modules'
	]
}
